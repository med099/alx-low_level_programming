NAME = school

CC = gcc

CFLAGS = -Wall -Werror -Wextra -pedantic

SRC = main.c school.c

OBJ = $(SRC:.c=.o)

RM = rm -f

%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

all : $(NAME)

$(NAME) : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean :
	$(RM) *~ $(NAME)

oclean :
	$(RM) $(OBJ)

fclean : clean oclean

re : oclean all
